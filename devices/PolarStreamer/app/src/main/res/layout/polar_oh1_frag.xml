<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:keepScreenOn="true">

        <TextView
            android:id="@+id/idView_frag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:text="@string/device_id_view"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextSetID_frag2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="56dp"
            android:hint="@string/set_id_button"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.094"
            app:layout_constraintStart_toEndOf="@+id/idView_frag2"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="Suspicious0dp" />

        <ToggleButton
            android:id="@+id/start_stop_connection_frag2"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:textColor="@color/colorPrimary"
            android:textOff="Start Connection"
            android:textOn="Stop Connection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editTextSetID_frag2" />

        <TextView
            android:id="@+id/connectStatusView_frag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="24dp"
            android:text="@string/connection_status_view"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/start_stop_connection_frag2" />

        <TextView
            android:id="@+id/status_frag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/connectStatusView_frag2"
            app:layout_constraintTop_toBottomOf="@+id/start_stop_connection_frag2" />

        <TextView
            android:id="@+id/batteryView_frag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="24dp"
            android:text="@string/battery_view"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/connectStatusView_frag2" />

        <TextView
            android:id="@+id/battery_frag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="128dp"
            android:layout_marginTop="24dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/connectStatusView_frag2" />

        <TextView
            android:id="@+id/timerView_frag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="28dp"
            android:text="@string/timer_view"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/batteryView_frag2" />

        <Chronometer
            android:id="@+id/timer_frag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="112dp"
            android:layout_marginTop="76dp"
            android:textColor="@color/ap_gray"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/connectStatusView_frag2" />

        <TextView
            android:id="@+id/hrView_frag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="32dp"
            android:text="@string/hr"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timerView_frag2" />

        <TextView
            android:id="@+id/hr_frag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="136dp"
            android:layout_marginTop="32dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timer_frag2" />

        <ToggleButton
            android:id="@+id/start_acc_frag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:textOff="Stream Acc"
            android:textOn="Pause Acc"
            android:background="@android:color/white"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hrView_frag2" />

        <TextView
            android:id="@+id/accView_frag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="92dp"
            android:text="@string/acc"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hrView_frag2" />

        <TextView
            android:id="@+id/acc_frag2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="128dp"
            android:layout_marginTop="24dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/start_acc_frag2" />


        <ToggleButton
            android:id="@+id/start_ppg_frag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="132dp"
            android:layout_marginTop="20dp"
            android:textOff="stream ppg"
            android:textOn="pause ppg"
            android:background="@android:color/white"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hrView_frag2" />

        <TextView
            android:id="@+id/ppgView_frag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="28dp"
            android:text="@string/ppg"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/accView_frag2" />

        <TextView
            android:id="@+id/ppg_frag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginTop="28dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/acc_frag2" />

        <ToggleButton
            android:id="@+id/start_ppi_frag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="236dp"
            android:layout_marginTop="20dp"
            android:textOff="stream ppi"
            android:textOn="pause ppi"
            android:background="@android:color/white"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hrView_frag2" />

        <TextView
            android:id="@+id/ppiView_frag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="32dp"
            android:text="@string/ppi"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ppgView_frag2" />

        <TextView
            android:id="@+id/ppi_frag2"
            android:layout_width="0dp"
            android:layout_height="21dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="32dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ppg_frag2" />

        <ToggleButton
            android:id="@+id/start_stop_recording_frag2"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="131dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:background="@android:color/white"
            android:textColor="@color/colorPrimary"
            android:textOff="Start Recording"
            android:textOn="Stop Recording"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ppiView_frag2" />

        <Button
            android:id="@+id/export_data"
            android:layout_width="149dp"
            android:layout_height="50dp"
            android:layout_marginStart="172dp"
            android:layout_marginTop="28dp"
            android:background="@android:color/white"
            android:text="export data"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ppi_frag2" />

        <TextView
            android:id="@+id/show_plots"
            android:layout_width="128dp"
            android:layout_height="26dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="24dp"
            android:text="@string/show_plots"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/export_data" />

        <RadioGroup
            android:id="@+id/radioGroupShowPlots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/show_plots" >

            <RadioButton
                android:id="@+id/hr_plot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="30dp"
                android:text="@string/hr"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/show_plots" />

            <RadioButton
                android:id="@+id/acc_plot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/acc"
                app:layout_constraintStart_toEndOf="@id/hr_plot"
                app:layout_constraintTop_toBottomOf="@id/show_plots" />

            <RadioButton
                android:id="@+id/ppg_plot"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/ppg"
                app:layout_constraintStart_toEndOf="@id/acc_plot"
                app:layout_constraintTop_toBottomOf="@id/show_plots" />
        </RadioGroup>


        <com.androidplot.xy.XYPlot
            android:id="@+id/plotHR"
            style="@style/FullScreenGraph"
            android:layout_width="443dp"
            android:layout_height="226dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            app:backgroundColor="@color/design_default_color_background"
            app:graphBackgroundColor="@color/design_default_color_background"
            app:graphMarginBottom="12dp"
            app:graphMarginLeft="30dp"

            app:graphMarginRight="8dp"
            app:graphMarginTop="20dp"
            app:gridBackgroundColor="#F1F4F4"
            app:gridInsetLeft="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.393"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@id/show_plots"
            app:lineLabels="left"
            app:paddingBottom="10dp"
            app:paddingLeft="5dp"
            app:paddingRight="5dp"
            app:paddingTop="5dp"
            app:rangeTitle="@string/hr_range_title"
            app:rangeTitleTextColor="#000000"
            app:rangeTitleTextSize="14dp"
            app:renderMode="use_background_thread"
            app:title="@string/hr_title"
            app:titleTextColor="#000000"
            app:titleTextSize="15dp" />

        <com.androidplot.xy.XYPlot
            android:id="@+id/plotACC"
            style="@style/FullScreenGraph"
            android:layout_width="449dp"
            android:layout_height="234dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            app:backgroundColor="@color/design_default_color_background"
            app:graphBackgroundColor="@color/design_default_color_background"
            app:graphMarginBottom="12dp"
            app:graphMarginLeft="30dp"
            app:graphMarginRight="5dp"
            app:graphMarginTop="20dp"
            app:gridBackgroundColor="#F1F4F4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.423"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/show_plots"
            app:layout_constraintVertical_bias="0.0"
            app:lineLabelInsetLeft="12dp"
            app:lineLabels="left"
            app:paddingBottom="10dp"
            app:paddingLeft="5dp"
            app:paddingRight="5dp"
            app:paddingTop="5dp"
            app:rangeTitle="@string/acc_range_title"
            app:rangeTitleTextColor="#000000"
            app:rangeTitleTextSize="14dp"
            app:renderMode="use_background_thread"
            app:title="@string/acc_title"
            app:titleTextColor="#000000"
            app:titleTextSize="15dp" />

        <com.androidplot.xy.XYPlot
            android:id="@+id/plotPPG"
            style="@style/FullScreenGraph"
            android:layout_width="443dp"
            android:layout_height="222dp"
            android:layout_marginTop="40dp"
            app:backgroundColor="@color/design_default_color_background"
            app:graphBackgroundColor="@color/design_default_color_background"
            app:graphMarginBottom="12dp"
            app:graphMarginLeft="30dp"

            app:graphMarginRight="5dp"
            app:graphMarginTop="20dp"
            app:gridBackgroundColor="#F1F4F4"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_bias="0.445"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/show_plots"
            app:lineLabelInsetLeft="12dp"
            app:lineLabels="left"
            app:rangeTitle="@string/ppg_range_title"
            app:rangeTitleTextColor="#000000"
            app:rangeTitleTextSize="14dp"
            app:renderMode="use_background_thread"
            app:title="@string/ppg_title"
            app:titleTextColor="#000000"
            app:titleTextSize="15dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>




